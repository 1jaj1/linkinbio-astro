---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/modules/Profile/Profile.astro';
import ContentGrid from '../components/modules/ContentGrid/ContentGrid.astro';

// Load TinaCMS content
import pageData from '../../content/page/page.json';
---

<Layout title={pageData.seo.title}>
  <main class="min-h-screen flex flex-col items-center justify-start gap-24 lg:gap-32 py-16 px-4 pb-0">
    
    <!-- Name Section -->
    <section class="flex justify-start items-center p-4 max-w-screen-xl w-full">
      <h1 class="text-figma-title font-primary text-black uppercase leading-[0.95] text-left">
        {pageData.header.title}
      </h1>
    </section>

    <!-- Information Section -->
    <section class="flex flex-col gap-16 lg:gap-24 w-full max-w-screen-xl">

       <!-- Short Bio Section -->
       <div class="flex justify-start">
         <div class="flex flex-col gap-6 max-w-xl px-4">
           <h2 class="text-figma-section font-primary text-black font-bold text-left">
             {pageData.information.title}
           </h2>
           <p class="text-figma-body font-primary text-black leading-[1.874] text-left">
             {pageData.information.description}
           </p>
         </div>
       </div>

       <!-- Content Grid with TinaCMS Data -->
       <ContentGrid cards={pageData.information.cards} />

     </section>

    <!-- Footer -->
    <footer class="w-full max-w-screen-xl flex justify-end p-4">
      <a
        href={pageData.footer.attributionUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="footer-attribution"
      >
        {pageData.footer.attribution}
      </a>
    </footer>

  </main>
</Layout>