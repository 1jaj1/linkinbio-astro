---
import Layout from '../layouts/Layout.astro';
import Profile from '../components/Profile/Profile.astro';
import Card from '../components/Card/Card.astro';
import CardBackground from '../components/Card/CardBackground.astro';
import CardContent from '../components/Card/CardContent.astro';
import ContentGrid from '../components/ContentGrid/ContentGrid.astro';
---

<Layout title="Design System Test">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-12">Design System Test</h1>
    
    <!-- Profile Component Test -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Profile Component</h2>
      <Profile 
        name="Jane Doe" 
        bio="Creative designer and developer with a passion for minimalism and functionality."
        avatar="/placeholder-avatar.jpg"
      />
    </section>

    <!-- Card Component Test -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Card Components</h2>
      
      <!-- Basic Card -->
      <div class="mb-8">
        <h3 class="text-lg font-medium mb-4">Basic Card</h3>
        <Card href="https://example.com">
          <CardBackground />
          <CardContent 
            title="Basic Card" 
            description="This is a basic card with background and content."
          />
        </Card>
      </div>

      <!-- Card with Image -->
      <div class="mb-8">
        <h3 class="text-lg font-medium mb-4">Card with Image Background</h3>
        <Card href="https://example.com">
          <CardBackground image="/placeholder-card.jpg" />
          <CardContent 
            title="Image Card" 
            description="This card has an image background with overlay."
            align="center"
          />
        </Card>
      </div>

      <!-- Card with Gradient -->
      <div class="mb-8">
        <h3 class="text-lg font-medium mb-4">Card with Gradient</h3>
        <Card href="https://example.com">
          <CardBackground gradient="from-purple-600 to-pink-600" />
          <CardContent 
            title="Gradient Card" 
            description="This card uses a custom gradient background."
            align="center"
          />
        </Card>
      </div>
    </section>

    <!-- ContentGrid Test -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Content Grid</h2>
      
      <h3 class="text-lg font-medium mb-4">2 Column Grid</h3>
      <ContentGrid columns={2} gap="md" class="mb-8">
        <Card href="https://example1.com">
          <CardBackground gradient="from-blue-500 to-cyan-500" />
          <CardContent 
            title="Card 1" 
            description="First card in 2-column grid"
            align="center"
          />
        </Card>
        <Card href="https://example2.com">
          <CardBackground gradient="from-green-500 to-emerald-500" />
          <CardContent 
            title="Card 2" 
            description="Second card in 2-column grid"
            align="center"
          />
        </Card>
      </ContentGrid>

      <h3 class="text-lg font-medium mb-4">3 Column Grid</h3>
      <ContentGrid columns={3} gap="lg">
        <Card href="https://example1.com">
          <CardBackground gradient="from-red-500 to-orange-500" />
          <CardContent 
            title="Card A" 
            description="First card"
            align="center"
          />
        </Card>
        <Card href="https://example2.com">
          <CardBackground gradient="from-yellow-500 to-amber-500" />
          <CardContent 
            title="Card B" 
            description="Second card"
            align="center"
          />
        </Card>
        <Card href="https://example3.com">
          <CardBackground gradient="from-indigo-500 to-purple-500" />
          <CardContent 
            title="Card C" 
            description="Third card"
            align="center"
          />
        </Card>
      </ContentGrid>
    </section>

    <!-- Responsive Test -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Responsive Grid Test</h2>
      <ContentGrid columns={4} gap="md">
        <Card href="https://example1.com">
          <CardBackground gradient="from-rose-500 to-pink-500" />
          <CardContent 
            title="Responsive 1" 
            description="Auto-responsive"
            align="center"
          />
        </Card>
        <Card href="https://example2.com">
          <CardBackground gradient="from-fuchsia-500 to-purple-500" />
          <CardContent 
            title="Responsive 2" 
            description="Auto-responsive"
            align="center"
          />
        </Card>
        <Card href="https://example3.com">
          <CardBackground gradient="from-violet-500 to-indigo-500" />
          <CardContent 
            title="Responsive 3" 
            description="Auto-responsive"
            align="center"
          />
        </Card>
        <Card href="https://example4.com">
          <CardBackground gradient="from-blue-500 to-cyan-500" />
          <CardContent 
            title="Responsive 4" 
            description="Auto-responsive"
            align="center"
          />
        </Card>
      </ContentGrid>
    </section>
  </main>
</Layout>