---
export interface Props {
  gradient?: string;
  image?: string;
  overlay?: boolean;
  class?: string;
}

const { 
  gradient = 'from-gray-900 to-gray-700', 
  image, 
  overlay = true,
  class: className = '' 
} = Astro.props;

const baseClasses = 'absolute inset-0 rounded-lg overflow-hidden';
const overlayClasses = overlay ? 'after:absolute after:inset-0 after:bg-black/20' : '';
---

<div class={`${baseClasses} ${className}`}>
  {image && (
    <img 
      src={image} 
      alt="" 
      class="w-full h-full object-cover"
      loading="lazy"
    />
  )}
  <div 
    class={`absolute inset-0 bg-gradient-to-br ${gradient} ${overlayClasses}`}
    aria-hidden="true"
  />
</div>