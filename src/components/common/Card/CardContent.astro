---
export interface Props {
  title?: string;
  description?: string;
  align?: 'left' | 'center' | 'right';
  class?: string;
}

const { 
  title, 
  description, 
  align = 'left', 
  class: className = '' 
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right'
};
---

<div class={`relative z-10 ${alignClasses[align]} ${className}`}>
  {title && (
    <h3 class="text-xl font-bold text-white mb-2">
      {title}
    </h3>
  )}
  {description && (
    <p class="text-gray-200 text-sm leading-relaxed">
      {description}
    </p>
  )}
  <slot />
</div>