---
export interface Props {
  name: string;
  bio: string;
  avatarUrl?: string;
}

const { name, bio, avatarUrl } = Astro.props;
---

<div class="flex flex-col items-center p-6 bg-white dark:bg-gray-900 rounded-lg shadow-md">
  {avatarUrl && (
    <img 
      src={avatarUrl} 
      alt={`Avatar of ${name}`} 
      class="w-24 h-24 rounded-full mb-4 object-cover border-4 border-gray-200 dark:border-gray-700"
    />
  )}
  <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 text-center">{name}</h2>
  <p class="text-gray-600 dark:text-gray-300 text-center max-w-md">{bio}</p>
</div>