---
export interface Props {
  name: string;
  bio: string;
  avatar?: string;
  location?: string;
}

const { name, bio, avatar, location } = Astro.props;
---

<div class="text-center mb-8">
  {avatar && (
    <img 
      src={avatar} 
      alt={name}
      class="w-24 h-24 rounded-full mx-auto mb-4 border-4 border-white shadow-lg"
    />
  )}
  
  <h1 class="text-2xl font-bold text-gray-900 mb-2">{name}</h1>
  <p class="text-gray-600 mb-1">{bio}</p>
  {location && (
    <p class="text-sm text-gray-500 flex items-center justify-center">
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      {location}
    </p>
  )}
</div>