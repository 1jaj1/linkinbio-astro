---
export interface Props {
  href: string;
  title: string;
  description?: string;
  icon?: string;
  variant?: 'primary' | 'secondary' | 'outline';
}

const { href, title, description, icon, variant = 'primary' } = Astro.props;

const baseClasses = "w-full p-4 rounded-lg border transition-all duration-200 flex items-center justify-between group";
const variantClasses = {
  primary: "bg-primary text-white border-primary hover:bg-primary/90",
  secondary: "bg-gray-100 text-gray-900 border-gray-200 hover:bg-gray-200",
  outline: "bg-white text-gray-900 border-gray-300 hover:bg-gray-50"
};
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer"
  class={`${baseClasses} ${variantClasses[variant]}`}
>
  <div class="flex items-center">
    {icon && (
      <span class="mr-3 text-xl">{icon}</span>
    )}
    <div class="text-left">
      <h3 class="font-semibold">{title}</h3>
      {description && (
        <p class="text-sm opacity-80">{description}</p>
      )}
    </div>
  </div>
  <svg 
    class="w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity" 
    fill="none" 
    stroke="currentColor" 
    viewBox="0 0 24 24"
  >
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
  </svg>
</a>